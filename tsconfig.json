{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "jsx": "react",                 
    "jsxFactory": "h",              
    "jsxFragmentFactory": "Fragment", 
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./gen/src/*"],
      
    }
  },
  "include": ["gen/src/**/*", "gen/scripts/**/*", "assets/ts/**/*"]
}