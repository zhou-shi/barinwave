{
    "name": "brainwave",
    "version": "1.0.0",
    "description": "Brainwave theme for Hugo with Preact & Radix",
    "type": "module",
    "scripts": {
        "generate": "tsx gen/scripts/build-wrapper.ts",
        "dev:css": "npx @tailwindcss/cli -i ./assets/css/main.css -o ./assets/css/compiled/main.css --watch",
        "dev:hugo": "hugo server -D --disableFastRender --bind 0.0.0.0 --baseURL http://localhost:1313 --poll 700ms --source ../../",
        "start": "npm run generate && npx concurrently \"npm run dev:css\" \"npm run dev:hugo\" --names \"CSS,HUGO\" --prefix-colors \"blue,magenta\"",
        "build": "npm run generate && NODE_ENV=production npx @tailwindcss/cli -i ./assets/css/main.css -o ./assets/css/compiled/main.css --minify"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zhou-shi/brainwave.git"
    },
    "keywords": [
        "hugo",
        "hugo-theme",
        "tailwind",
        "preact",
        "radix-ui"
    ],
    "author": {
        "name": "Zhou Shi",
        "github": "https://github.com/zhou-shi"
    },
    "dependencies": {
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-navigation-menu": "^1.2.14",
        "@splinetool/react-spline": "^4.1.0",
        "@splinetool/runtime": "^1.12.23",
        "clsx": "^2.1.1",
        "framer-motion": "^12.23.26",
        "preact": "^10.19.3",
        "preact-render-to-string": "^6.3.1",
        "react": "npm:@preact/compat",
        "react-dom": "npm:@preact/compat"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.17",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@types/node": "^25.0.2",
        "concurrently": "^9.1.2",
        "tailwind-merge": "^3.4.0",
        "tailwind-scrollbar": "^4.0.2",
        "tailwindcss": "^4.1.17",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
